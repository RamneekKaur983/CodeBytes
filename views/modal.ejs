<div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img src="https://www.cdn.geeksforgeeks.org/wp-content/uploads/Competitive-Programming-1.jpg">
          <span class="card-title">Card Title</span>
        </div>
        <div class="card-content">
            <div class="collection " >

                <% topicNames.forEach(function(item) { %>
            
                  
                  
                  
                    
                  
                  <div class="modal fade " id="<%=item.title %>" style="display: none; background-color: #665998; " >
                    <div class="modal-dialog"  >
                        <div class="modal-content" >
                            <div class="modal-header">
                                <h2 class="modal-title">Instructions!</h2>
                                <button type="button" class="close" data-dismiss="modal">
                                    <span>&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                
                                    <ol >

                                      <li>  The following quiz consists of 5 questions.</li>
                                        
                                      <li> You are given 15 seconds to attempt the quiz.</li> 
                                       
                                      <li>  Clicking on "Submit" will submit the quiz and your scores will be saved.</li> 
                                        
                                      <li> Otherwise , the quiz will automatically submit after 15 seconds.</li> 
                                        
                    
                                      <li>   Click on "Agree to start the quiz".</li> 
                                    </ol>
                                   
                
                
                                
                            </div>
                            <div class="modal-footer">
                               
                                <button type="button" class="btn btn-secondary" style="  margin: 5px; background-color:#665998; text-align: center ;"  data-dismiss="modal" onclick="location.href='/syllabus/<%= item .title %>'">Agree</button>
                                <button type="button" class="btn btn-secondary"  style=" margin: 5px;  background-color: #665998;;" data-dismiss="modal">Disagree</button>
                            </div>
                        </div>
                    </div>
                   
                </div>
                  
                  
                  
                  
                  
                  
                  

                  
                  
                  
                  <a type="button"  class="collection-item " data-toggle="modal" data-target="#<%=item.title%>"><%= item.title %></a>
                    <br>
            
            
                    <% } )%>
                    
                       
                  </div>  
            </div>
