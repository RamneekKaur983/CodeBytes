    <div class="container">

   



<style>
    .myClass{
        white-space: pre-line;
    }
    </style>


<form action="/deleteQuestions" method="POST">
    <input type="hidden" name="Topic" value="<%=Topic %>">
    <ol class="collection">

        <% topicQuestions.forEach(function (question) { %>
    
            <% var x=1 %>
         
                <% question.questions.forEach(function (item) {  %>
               
                        <label  style="background-color: white;">
                            
                            <input type="checkbox" id="indeterminate-checkbox" name="QuesToDelete" value="<%=item.title %>" style="background-color: white; text-align: left;">
                            
                            <span ><h5>  </h5>  <li class="myClass" style="white-space: pre-line; color: black; background-color: white;"><%=item.title %></li></span>
                        </label>
                   
                    <ol type="A">
                    <li><%= item.option1 %></li>
                    <li><%= item.option2 %></li>
                    <li><%=  item.option3 %></li>
                    <li><%= item.option4 %></li>
                   
                    
                </ol>
    
                 <% })  %>
                 <button class="btn waves-effect waves-light" type="submit" name="action" style="background-color: #665998; text-align: center;" >
                    <i class="material-icons right">Delete Selected Questions</i>
                  </button>


</form>

             <div class="collection" style="text-align: center;">
